{
    "$metadata": {
        "uris": {
            "jsonLdContext": "https://example.com/path/to/file/context.jsonld"
        },
        "type": "Origin",
        "version": "0.0.1"
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Origin credential",
    "title": "OriginCredential",
    "properties": {
        "credentialSubject": {
            "description": "Stores the data of the credential",
            "title": "Credential subject",
            "properties": {
                "farmMethodType": {
                    "description": "The farm method certificate type attached to the property id overlapping the location coordinate",
                    "examples": [
                        "Organic",
                        "Regenerative",
                        "Traditional",
                        "Industrial"
                    ],
                    "title": "farm method type",
                    "type": "string"
                },
                "farmMethodClassifier": {
                    "description": "Boolean representing if the property id has a method certificate attached.",
                    "title": "farm method certificate",
                    "type": "boolean"
                },
                "harvestDate": {
                    "description": "estimated date when the harvest of the cultivation was performed.",
                    "title": "harvest date",
                    "type": "string"
                },
                "plantingDate": {
                    "description": "estimated date when the (final) planting of the cultivation was performed.",
                    "title": "planting date",
                    "type": "string"
                },
                "croptype": {
                    "description": "a cultivation crop type",
                    "title": "crop type",
                    "type": "string"
                },
                "variety": {
                    "description": "a cultivations crop variety",
                    "enum": [
                        ""
                    ],
                    "examples": [
                        "bold",
                        "java",
                        "redskinjava"
                    ],
                    "title": "variety",
                    "type": "string"
                },
                "location": {
                    "description": "The center coordinates of the largest field under cultivation.",
                    "title": "coordinates of the fields",
                    "type": "object"
                },
                "aadhar": {
                    "description": "12 digit number of the owner of the cultivation (not necessary of the land owner) ",
                    "title": "Aadhar number of the land cultivator",
                    "type": "number"
                },
                "id": {
                    "description": "Stores the DID of the subject that owns the credential",
                    "title": "Credential subject ID",
                    "format": "uri",
                    "type": "string"
                }
            },
            "required": [
                "croptype",
                "location",
                "aadhar"
            ],
            "type": "object"
        },
        "@context": {
            "type": [
                "string",
                "array",
                "object"
            ]
        },
        "expirationDate": {
            "format": "date-time",
            "type": "string"
        },
        "id": {
            "type": "string"
        },
        "issuanceDate": {
            "format": "date-time",
            "type": "string"
        },
        "issuer": {
            "type": [
                "string",
                "object"
            ],
            "format": "uri",
            "properties": {
                "id": {
                    "format": "uri",
                    "type": "string"
                }
            },
            "required": [
                "id"
            ]
        },
        "type": {
            "type": [
                "string",
                "array"
            ],
            "items": {
                "type": "string"
            }
        },
        "credentialSchema": {
            "properties": {
                "id": {
                    "format": "uri",
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "type"
            ],
            "type": "object"
        }
    },
    "required": [
        "credentialSubject",
        "@context",
        "id",
        "issuanceDate",
        "issuer",
        "type",
        "credentialSchema"
    ],
    "type": "object"
}